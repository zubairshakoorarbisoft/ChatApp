<!DOCTYPE html>
<html>
<head>
    <title>Chat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/ChatView.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.js"></script>
</head>
<!--Coded With Love By Mutiullah Samim-->
<body>
    <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">
            <div class="col-md-4 col-xl-3 chat">
                <div class="card mb-sm-3 mb-md-0 contacts_card">
                    <div class="card-header">
                        <div class="input-group">
                            <input type="text" placeholder="Search..." name="" class="form-control search">
                            <div class="input-group-prepend">
                                <span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body contacts_body">
                        <ui class="contacts" data-bind="foreach: Availableusers">
                            <li class="active-chat" style="cursor: pointer;" data-bind="click: $root.LoadMessageDetail" id="">
                                <p hidden data-bind="text: id"></p>
                                <div class="d-flex bd-highlight">
                                    <div class="img_cont">
                                        <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg" class="rounded-circle user_img">
                                        <span data-bind="css: {'online_icon': isOnline}"></span>
                                    </div>
                                    <div class="user_info">
                                        <span data-bind="text: userName"></span>
                                        <p class="unreadMessageCount" data-bind="text: unreadMessage"></p>
                                    </div>
                                </div>
                            </li>

                        </ui>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div class="col-md-8 col-xl-6 chat">
                <div class="card">
                    <div class="card-header msg_head" id="content" data-bind="visible: showContent">
                        <div class="d-flex bd-highlight">
                            <div class="img_cont">
                                <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg" class="rounded-circle user_img">
                                <span class="online_icon"></span>
                            </div>
                            <div class="user_info" data-bind="with:SelectedUser">
                                <span data-bind="text: userName"></span>
                                <p hidden data-bind="text: id"></p>
                                <p>1767 Messages</p>
                            </div>
                            <div class="video_cam">
                                <span><i class="fas fa-video"></i></span>
                                <span><i class="fas fa-phone"></i></span>
                            </div>
                        </div>
                        <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
                        <div class="action_menu">
                            <ul>
                                <li><i class="fas fa-user-circle"></i> View profile</li>
                                <li><i class="fas fa-users"></i> Add to close friends</li>
                                <li><i class="fas fa-plus"></i> Add to group</li>
                                <li><i class="fas fa-ban"></i> Block</li>
                            </ul>
                        </div>
                    </div>
                    <div id="messagesList" data-bind="foreach: userMessage" class="card-body msg_card_body messages">
                        @*<div data-bind="css: { class: 'd-flex justify-content-start mb-4' }">
                                <div class="img_cont_msg">
                                    <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg" class="rounded-circle user_img_msg">
                                </div>
                                <div class="msg_cotainer">
                                    <p data-bind="text:Message"></p>
                                    <span class="msg_time">8:40 AM, Today</span>
                                </div>
                            </div>*@



                        <div class="d-flex justify-content-start mb-4" data-bind="if: MessageFrom() != '@User.Identity.Name'">
                            <div class="img_cont_msg">
                                <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg" class="rounded-circle user_img_msg">
                            </div>
                            <div class="msg_cotainer">
                                <p data-bind="text:Message"></p>
                                <span class="msg_time" data-bind="text: TimeSent"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mb-4" data-bind="if: MessageFrom() == '@User.Identity.Name'">
                            <div class="msg_cotainer_send">
                                <p data-bind="text:Message"></p>                                
                                <span class="msg_time_send" data-bind="text: TimeSent"></span>
                            </div>
                            <div class="img_cont_msg">
                                <img src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg" class="rounded-circle user_img_msg">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="input-group">
                            <div class="input-group-append">
                                <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
                            </div>
                            <textarea id="messageInput" class="form-control type_msg" data-bind="value : MessageBody" placeholder="Type your message..."></textarea>
                            <input class="form-control" type="text" id="userInput" value="@User.Identity.Name.Split("@")[0]" hidden />
                            <div class="input-group-append">
                                <span class="input-group-text send_btn"><button id="sendButton" data-bind="click: SendMessage.bind(), enable: hasMessageBody" class="btn-transparent"><i class="fas fa-location-arrow"></i></button></span>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $('#action_menu_btn').click(function () {
            $('.action_menu').toggle();
        });
    });
</script>